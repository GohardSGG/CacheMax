<Window x:Class="CacheMax.RemoveAccelerationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="移除加速确认"
        Height="250"
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="确认移除加速"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <!-- Message -->
        <TextBlock Grid.Row="1"
                   x:Name="MessageTextBlock"
                   TextWrapping="Wrap"
                   Margin="0,0,0,15"
                   VerticalAlignment="Top"/>

        <!-- Delete Cache Option -->
        <CheckBox Grid.Row="2"
                  x:Name="DeleteCacheCheckBox"
                  Content="同时删除缓存文件（完全清理）"
                  Margin="0,0,0,20"
                  ToolTip="勾选此项将删除缓存目录中的所有文件，取消勾选则仅移除加速但保留缓存文件"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="确定"
                    Width="80"
                    Height="30"
                    Margin="0,0,10,0"
                    IsDefault="True"
                    Click="OkButton_Click"/>
            <Button Content="取消"
                    Width="80"
                    Height="30"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
