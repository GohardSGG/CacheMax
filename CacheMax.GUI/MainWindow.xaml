<Window x:Class="CacheMax.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CacheMax - File System Accelerator"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <ToolBar Grid.Row="0" Height="40">
            <Button Name="AccelerateButton" Click="AccelerateButton_Click" Padding="10,5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🚀" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="批量加速" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Separator/>
            <Button Name="StopButton" Click="StopButton_Click" Padding="10,5" IsEnabled="False">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⏹" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Stop Acceleration" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Separator/>
            <Button Name="RefreshButton" Click="RefreshButton_Click" Padding="10,5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🔄" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Refresh" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Separator/>
            <Button Name="DeleteButton" Click="DeleteButton_Click" Padding="10,5" IsEnabled="False">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🗑" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Delete Entry" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </ToolBar>

        <!-- Main content area -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Left side - Main controls -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Global Settings -->
                <GroupBox Grid.Row="0" Header="全局设置" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <!-- Cache root -->
                        <Label Grid.Row="0" Grid.Column="0" Content="缓存根目录:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="CacheRootTextBox"
                                 Text="S:\Cache" VerticalAlignment="Center" Margin="5"/>
                        <Button Grid.Row="0" Grid.Column="2" Name="BrowseCacheButton"
                                Content="Browse..." Click="BrowseCacheButton_Click" Margin="5"/>

                        <!-- Core Controls -->
                        <Label Grid.Row="1" Grid.Column="0" Content="操作:" VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                            <Button Name="ValidateButton" Content="验证完整性" Click="ValidateButton_Click" Margin="0,0,10,0" IsEnabled="False"/>
                            <Button Name="RecoveryButton" Content="手动恢复" Click="RecoveryButton_Click" Margin="0,0,10,0" IsEnabled="False"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Accelerated folders list -->
                <GroupBox Grid.Row="1" Header="加速文件夹管理">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- DataGrid -->
                        <DataGrid Name="AcceleratedFoldersGrid" Grid.Row="0"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  SelectionMode="Single"
                                  SelectionChanged="AcceleratedFoldersGrid_SelectionChanged"
                                  GridLinesVisibility="Horizontal"
                                  AlternatingRowBackground="LightGray">
                            <DataGrid.Columns>
                                <!-- Status Column with Icons -->
                                <DataGridTemplateColumn Header="状态" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Name="StatusIcon" FontSize="14" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding Status}" VerticalAlignment="Center"/>
                                            </StackPanel>
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="未加速">
                                                    <Setter TargetName="StatusIcon" Property="Text" Value="⚪"/>
                                                    <Setter TargetName="StatusIcon" Property="Foreground" Value="Gray"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="初始化中">
                                                    <Setter TargetName="StatusIcon" Property="Text" Value="🔄"/>
                                                    <Setter TargetName="StatusIcon" Property="Foreground" Value="Blue"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="同步中">
                                                    <Setter TargetName="StatusIcon" Property="Text" Value="⚡"/>
                                                    <Setter TargetName="StatusIcon" Property="Foreground" Value="Orange"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="已完成">
                                                    <Setter TargetName="StatusIcon" Property="Text" Value="✅"/>
                                                    <Setter TargetName="StatusIcon" Property="Foreground" Value="Green"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="失败">
                                                    <Setter TargetName="StatusIcon" Property="Text" Value="❌"/>
                                                    <Setter TargetName="StatusIcon" Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Progress Column -->
                                <DataGridTemplateColumn Header="进度" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <ProgressBar Name="ProgressBar"
                                                           Height="18"
                                                           Minimum="0"
                                                           Maximum="100"
                                                           Value="{Binding ProgressPercentage}"
                                                           Background="LightGray"
                                                           BorderBrush="DarkGray"
                                                           BorderThickness="1"/>
                                                <TextBlock Text="{Binding ProgressText}"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"
                                                         FontSize="10"
                                                         FontWeight="Bold"/>
                                            </Grid>
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="未加速">
                                                    <Setter TargetName="ProgressBar" Property="Foreground" Value="Gray"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="初始化中">
                                                    <Setter TargetName="ProgressBar" Property="Foreground" Value="Blue"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="同步中">
                                                    <Setter TargetName="ProgressBar" Property="Foreground" Value="Orange"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="已完成">
                                                    <Setter TargetName="ProgressBar" Property="Foreground" Value="Green"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="失败">
                                                    <Setter TargetName="ProgressBar" Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn Header="源路径" Binding="{Binding OriginalPath}" Width="2*"/>
                                <DataGridTextColumn Header="缓存路径" Binding="{Binding CachePath}" Width="2*"/>
                                <DataGridTextColumn Header="挂载点" Binding="{Binding MountPoint}" Width="120"/>
                                <DataGridTextColumn Header="缓存大小" Binding="{Binding CacheSizeFormatted}" Width="80"/>
                                <DataGridTextColumn Header="创建时间" Binding="{Binding CreatedAt, StringFormat='{}{0:MM-dd HH:mm}'}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Path Input Section -->
                        <GroupBox Grid.Row="1" Header="添加新路径" Margin="0,10,0,0" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Name="NewPathTextBox" Grid.Column="0"
                                         VerticalAlignment="Center"
                                         Margin="0,0,10,0"
                                         Padding="8,6"
                                         FontSize="12"
                                         ToolTip="输入要加速的文件夹路径，例如：C:\MyFolder"
                                         KeyDown="NewPathTextBox_KeyDown"/>

                                <Button Name="AddPathButton" Grid.Column="1"
                                        Content="➕ 添加"
                                        Click="AddPathButton_Click"
                                        Padding="8,6"
                                        Background="LightGreen"
                                        BorderBrush="Green"/>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </GroupBox>
            </Grid>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="LightGray"/>

            <!-- Right side - Sync Queue -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Sync Queue Header -->
                <GroupBox Grid.Row="0" Header="同步队列状态" Padding="5" Margin="0,0,0,5">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="队列长度:" Margin="0,0,5,0"/>
                            <TextBlock Name="QueueCountText" Text="0" FontWeight="Bold" Foreground="Blue"/>
                            <TextBlock Text="等待中:" Margin="15,0,5,0"/>
                            <TextBlock Name="PendingCountText" Text="0" FontWeight="Bold" Foreground="Orange"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="处理中:" Margin="0,0,5,0"/>
                            <TextBlock Name="ProcessingCountText" Text="0" FontWeight="Bold" Foreground="Green"/>
                            <TextBlock Text="失败:" Margin="15,0,5,0"/>
                            <TextBlock Name="FailedCountText" Text="0" FontWeight="Bold" Foreground="Red"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Sync Queue Tabs -->
                <TabControl Grid.Row="1" Name="SyncQueueTabControl">
                    <!-- 进行中的同步 -->
                    <TabItem Header="进行中">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <DataGrid Name="SyncQueueGrid" Grid.Row="0"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      SelectionMode="Single"
                                      FontSize="10">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="状态" Binding="{Binding Status}" Width="50">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="ToolTip" Value="{Binding ErrorMessage}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="处理中">
                                                        <Setter Property="Foreground" Value="Green"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="等待中">
                                                        <Setter Property="Foreground" Value="Orange"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="失败">
                                                        <Setter Property="Foreground" Value="Red"/>
                                                        <Setter Property="ToolTip" Value="{Binding ErrorMessage, StringFormat='错误: {0}'}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="文件名" Binding="{Binding FileName}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="ToolTip" Value="{Binding FilePath}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="大小" Binding="{Binding FileSizeFormatted}" Width="60"/>
                                    <DataGridTextColumn Header="进度" Binding="{Binding ProgressText}" Width="50"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- Queue Controls -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                                <Button Name="ClearFailedButton" Content="清理失败" Margin="0,0,5,0" Padding="5,2" Click="ClearFailedButton_Click"/>
                                <Button Name="RetryFailedButton" Content="重试失败" Padding="5,2" Click="RetryFailedButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>

                    <!-- 已完成的同步 -->
                    <TabItem Header="已完成">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <DataGrid Name="CompletedQueueGrid" Grid.Row="0"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      SelectionMode="Single"
                                      FontSize="10">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="操作" Binding="{Binding OperationTypeDisplay}" Width="50">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding OperationType}" Value="Created">
                                                        <Setter Property="Foreground" Value="Green"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding OperationType}" Value="Changed">
                                                        <Setter Property="Foreground" Value="Orange"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding OperationType}" Value="Deleted">
                                                        <Setter Property="Foreground" Value="Red"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="文件名" Binding="{Binding FileName}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="ToolTip" Value="{Binding FilePath}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="大小" Binding="{Binding FileSizeFormatted}" Width="60"/>
                                    <DataGridTextColumn Header="完成时间" Binding="{Binding CompletedAtFormatted}" Width="70"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- Completed Queue Controls -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                                <Button Name="ClearCompletedButton" Content="清理已完成" Margin="0,0,5,0" Padding="5,2" Click="ClearCompletedButton_Click"/>
                                <TextBlock Text="{Binding ElementName=CompletedQueueGrid, Path=Items.Count, StringFormat='共 {0} 个已完成文件'}"
                                          VerticalAlignment="Center" Margin="10,0,0,0" Foreground="Gray"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>


        <!-- Status bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Name="StatusText" Text="Ready"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Name="RunningCountText" Text="Running: 0"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Name="CacheStatsText" Text="Cache: --" Foreground="Blue"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Name="HitRateText" Text="Hit Rate: --%"  Foreground="Green"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Name="OperationsText" Text="Ops: R:0 W:0"  Foreground="Purple"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Log output -->
        <GroupBox Grid.Row="3" Header="Output Log" Margin="10,0,10,10">
            <ScrollViewer Name="LogScrollViewer" VerticalScrollBarVisibility="Auto">
                <TextBox Name="LogTextBox"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         FontFamily="Consolas"
                         FontSize="10"
                         Background="#1E1E1E"
                         Foreground="#E0E0E0"/>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>