<Window x:Class="CacheMax.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CacheMax - File System Accelerator"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <ToolBar Grid.Row="0" Height="40">
            <Button Name="AccelerateButton" Click="AccelerateButton_Click" Padding="10,5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="➕" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Accelerate Folder" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Separator/>
            <Button Name="StopButton" Click="StopButton_Click" Padding="10,5" IsEnabled="False">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⏹" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Stop Acceleration" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Separator/>
            <Button Name="RefreshButton" Click="RefreshButton_Click" Padding="10,5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🔄" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Refresh" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Separator/>
            <Button Name="TestMountButton" Click="TestMountButton_Click" Padding="10,5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🧪" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Test Mount Cache" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Separator/>
            <Button Name="DeleteButton" Click="DeleteButton_Click" Padding="10,5" IsEnabled="False">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🗑" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Delete Entry" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </ToolBar>

        <!-- Main content area -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Left side - Main controls -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Input section -->
                <GroupBox Grid.Row="0" Header="Acceleration Settings" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <!-- Source folder -->
                        <Label Grid.Row="0" Grid.Column="0" Content="Source Folder:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="SourceFolderTextBox"
                                 VerticalAlignment="Center" Margin="5"/>
                        <Button Grid.Row="0" Grid.Column="2" Name="BrowseSourceButton"
                                Content="Browse..." Click="BrowseSourceButton_Click" Margin="5"/>

                        <!-- Cache root -->
                        <Label Grid.Row="1" Grid.Column="0" Content="Cache Root:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Name="CacheRootTextBox"
                                 Text="S:\Cache" VerticalAlignment="Center" Margin="5"/>
                        <Button Grid.Row="1" Grid.Column="2" Name="BrowseCacheButton"
                                Content="Browse..." Click="BrowseCacheButton_Click" Margin="5"/>

                        <!-- Sync Settings -->
                        <Label Grid.Row="2" Grid.Column="0" Content="Sync Mode:" VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                            <ComboBox Name="SyncModeComboBox" Width="120" VerticalAlignment="Center">
                                <ComboBoxItem Content="即时同步" Tag="Immediate"/>
                                <ComboBoxItem Content="批量同步" Tag="Batch" IsSelected="True"/>
                                <ComboBoxItem Content="定期同步" Tag="Periodic"/>
                            </ComboBox>
                            <Label Content="延迟:" Margin="10,0,5,0" VerticalAlignment="Center"/>
                            <TextBox Name="SyncDelayTextBox" Text="3" Width="50" VerticalAlignment="Center"/>
                            <Label Content="秒" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button Grid.Row="2" Grid.Column="2" Name="SyncNowButton"
                                Content="立即同步" Click="SyncNowButton_Click" Margin="5" IsEnabled="False"/>

                        <!-- Advanced Controls -->
                        <Label Grid.Row="3" Grid.Column="0" Content="操作:" VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                            <Button Name="CleanCacheButton" Content="清理缓存" Click="CleanCacheButton_Click" Margin="0,0,10,0" IsEnabled="False"/>
                            <Button Name="ValidateButton" Content="验证完整性" Click="ValidateButton_Click" Margin="0,0,10,0" IsEnabled="False"/>
                            <Button Name="UpdateSyncModeButton" Content="更新同步模式" Click="UpdateSyncModeButton_Click" Margin="0,0,10,0" IsEnabled="False"/>
                            <Button Name="HealthCheckButton" Content="健康检查" Click="HealthCheckButton_Click" Margin="0,0,10,0"/>
                            <Button Name="RecoveryButton" Content="手动恢复" Click="RecoveryButton_Click" Margin="0,0,10,0" IsEnabled="False"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Accelerated folders list -->
                <GroupBox Grid.Row="1" Header="Accelerated Folders">
                    <DataGrid Name="AcceleratedFoldersGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              SelectionChanged="AcceleratedFoldersGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="60"/>
                            <DataGridTextColumn Header="Original Path" Binding="{Binding OriginalPath}" Width="*"/>
                            <DataGridTextColumn Header="Cache Path" Binding="{Binding CachePath}" Width="*"/>
                            <DataGridTextColumn Header="Mount Point" Binding="{Binding MountPoint}" Width="150"/>
                            <DataGridTextColumn Header="Cache Size" Binding="{Binding CacheSizeFormatted}" Width="80"/>
                            <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
            </Grid>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="LightGray"/>

            <!-- Right side - Sync Queue -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Sync Queue Header -->
                <GroupBox Grid.Row="0" Header="同步队列状态" Padding="5" Margin="0,0,0,5">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="队列长度:" Margin="0,0,5,0"/>
                            <TextBlock Name="QueueCountText" Text="0" FontWeight="Bold" Foreground="Blue"/>
                            <TextBlock Text="等待中:" Margin="15,0,5,0"/>
                            <TextBlock Name="PendingCountText" Text="0" FontWeight="Bold" Foreground="Orange"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="处理中:" Margin="0,0,5,0"/>
                            <TextBlock Name="ProcessingCountText" Text="0" FontWeight="Bold" Foreground="Green"/>
                            <TextBlock Text="失败:" Margin="15,0,5,0"/>
                            <TextBlock Name="FailedCountText" Text="0" FontWeight="Bold" Foreground="Red"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Sync Queue List -->
                <GroupBox Grid.Row="1" Header="文件同步队列">
                    <DataGrid Name="SyncQueueGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              FontSize="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="状态" Binding="{Binding Status}" Width="50">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="处理中">
                                                <Setter Property="Foreground" Value="Green"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="等待中">
                                                <Setter Property="Foreground" Value="Orange"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="失败">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="完成">
                                                <Setter Property="Foreground" Value="Gray"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="文件名" Binding="{Binding FileName}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="ToolTip" Value="{Binding FilePath}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="大小" Binding="{Binding FileSizeFormatted}" Width="60"/>
                            <DataGridTextColumn Header="进度" Binding="{Binding ProgressText}" Width="50"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <!-- Queue Controls -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0">
                    <Button Name="ClearCompletedButton" Content="清理已完成" Margin="0,0,5,0" Padding="5,2"/>
                    <Button Name="ClearFailedButton" Content="清理失败" Margin="0,0,5,0" Padding="5,2"/>
                    <Button Name="RetryFailedButton" Content="重试失败" Padding="5,2"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Status bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Name="StatusText" Text="Ready"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Name="RunningCountText" Text="Running: 0"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Name="CacheStatsText" Text="Cache: --" Foreground="Blue"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Name="HitRateText" Text="Hit Rate: --%"  Foreground="Green"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Name="OperationsText" Text="Ops: R:0 W:0"  Foreground="Purple"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Log output -->
        <GroupBox Grid.Row="3" Header="Output Log" Margin="10,0,10,10">
            <ScrollViewer Name="LogScrollViewer" VerticalScrollBarVisibility="Auto">
                <TextBox Name="LogTextBox"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         FontFamily="Consolas"
                         FontSize="10"
                         Background="#1E1E1E"
                         Foreground="#E0E0E0"/>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>